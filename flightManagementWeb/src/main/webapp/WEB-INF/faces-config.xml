<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	<navigation-rule>

		<navigation-case>
			<from-action>#{loginBean.processLogin}</from-action>
			<from-outcome>loginOk</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{loginBean.processLogin}</from-action>
			<from-outcome>loginFailed</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{logOutBean.processLogOut}</from-action>
			<from-outcome>loggedOut</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/manageusers.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userBean.processInsert}</from-action>
			<from-outcome>ok</from-outcome>
			<to-view-id>/manageusers.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>

	<navigation-rule>
		<from-view-id>/manageairports.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{manageAirports.addAirport}</from-action>
			<from-outcome>inserted</from-outcome>
			<to-view-id>/manageairports.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/managecompanies.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{manageCompanies.addCompany}</from-action>
			<from-outcome>inserted</from-outcome>
			<to-view-id>/managecompanies.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/manageflights.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{flightsBean.processInsert}</from-action>
			<from-outcome>ok</from-outcome>
			<to-view-id>/manageflights.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{flightsBean.addFlightFromTemplate}</from-action>
			<from-outcome>saved</from-outcome>
			<to-view-id>/manageflights.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/flighttemplate.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{templateBean.processInsert}</from-action>
			<from-outcome>ok</from-outcome>
			<to-view-id>/flighttemplate.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/manageplanes.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{planesBean.processInsert}</from-action>
			<from-outcome>ok</from-outcome>
			<to-view-id>/manageplanes.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/flighttemplate.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{templateBean.delete(template)}</from-action>
			<from-outcome>ok</from-outcome>
			<to-view-id>/flighttemplate.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<from-view-id>/manageitineraries.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{itineraryBean.addItinerary}</from-action>
			<from-outcome>inserted</from-outcome>
			<to-view-id>/manageitineraries.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	
</faces-config>